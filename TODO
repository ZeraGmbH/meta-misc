* systemd:
	1. alias links
	# create the required symbolic 'Alias' links
	alias=$(grep Alias $ROOT/$service_file \
		        | sed 's,Alias=,,g' \
		        | tr ',' '\n' \
		        | grep '\.service$')

	for r in $alias; do
		if [ "$action" = "enable" ]; then
			mkdir -p $ROOT/etc/systemd/system
			ln -s $service_file $ROOT/etc/systemd/$r
			echo "Enabled $service for $alias."
		else
			rm -f $ROOT/etc/systemd/system/$r
			echo "Disabled $service for $alias."
		fi
	done
		- reverted patch
		- meta-systemd
	--see
		ln -s '/lib/systemd/system/NetworkManager.service' '/etc/systemd/system/dbus-org.freedesktop.NetworkManager.service'
		OK ln -s '/lib/systemd/system/NetworkManager.service' '/etc/systemd/system/multi-user.target.wants/NetworkManager.service'
	2. meta-system

